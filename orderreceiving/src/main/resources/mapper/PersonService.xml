  <!--#查询火爆商品, 即流量前七个的高峰-->
  <select id="selectTop10" resultType="com.shangbaishuyao.bean.Top10">
   select
       person.pid , person.number
   from
        person
   where
		person.number >18
   group by
       person.pid
   order by
        person.number
   desc
        limit 10
  </select>

  <!--#商品访问次数在0-15次 表示该商品流量异常. 即商品有问题. 因为访问次数太少了. 要不是商品不好,就是页面做的不够吸引人-->
  <select id="selectTop1" resultType="int">
    SELECT count(*) from person WHERE number between 0 and  15
  </select>

  <!--#商品访问次数在15-20次,正式正常商品应该有的点击量-->
  <select id="selectTop2" resultType="int">
     SELECT count(*) from person WHERE number between 15 and 20
  </select>

  <!--#火爆商品-->
  <select id="selectTop3" resultType="int">
    SELECT count(*) from person WHERE number > 20
